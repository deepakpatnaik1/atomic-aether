    "sectionHeader": {
      "fontName": "Inter",
      "weight": "semibold",
      "sizeMultiplier": 0.85,
      "opacityMultiplier": 0.7,
      "style": "smallCaps"
    },
    "personaName": {
      "fontName": "Inter",
      "weight": "medium",
